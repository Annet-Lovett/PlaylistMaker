<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/fullTrack"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/trackImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginVertical="8dp"
            tools:src="@drawable/trackplaceholder"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginVertical="14dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/nameOfTheTrack"
                style="@style/trackName"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/name_of_the_track"
/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="13dp">

                <TextView
                    android:id="@+id/nameOfTheArtist"
                    style="@style/artistDuration"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/name_of_the_artist"/>

                <ImageView
                    style="@style/artistDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_weight="0"
                    android:src="@drawable/point"/>

                <TextView
                    android:id="@+id/durationOfTheTrack"
                    style="@style/artistDuration"
                    android:layout_weight="0"
                    android:text="@string/duration"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            style="@style/itemVector"
            android:src="@drawable/vector"
            android:layout_gravity="center"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>