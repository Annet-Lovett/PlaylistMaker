<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonMainStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">220dp</item>
        <item name="android:layout_marginTop">@dimen/normal_padding_size</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/dark</item>
        <item name="textAllCaps">false</item>
        <item name="iconTint">@color/dark</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_weight">@integer/material_motion_duration_long_1</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconSize">24dp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    
    <style name="menuSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/dark</item>
        <item name="iconTint">@color/grey</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:backgroundTint">@color/transp</item>
        <item name="android:outlineSpotShadowColor">@color/transp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="inputSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:drawableTint">@color/grey</item>
        <item name="cornerRadius">8dp</item>
        <item name="background">@color/lightGrey</item>
        <item name="backgroundTint">@color/lightGrey</item>
        <item name="paddingStart">12dp</item>
        <item name="paddingEnd">12dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="trackName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="artistDuration">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="itemVector">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginVertical">18dp</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="tint">@color/grey</item>
    </style>

</resources>