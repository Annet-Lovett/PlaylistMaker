<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="menuSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:thumbTint">@color/ligth_blue</item>
        <item name="android:trackTint">@color/extra_light_blue</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:backgroundTint">@color/transp</item>
        <item name="android:outlineSpotShadowColor">@color/transp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="inputSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:drawableTint">@color/dark</item>
        <item name="cornerRadius">16dp</item>
        <item name="background">@color/lightGrey</item>
        <item name="backgroundTint">@color/lightGrey</item>
        <item name="paddingStart">12dp</item>
        <item name="paddingEnd">12dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>
</resources>