<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_screen">
        <item name="android:background">@color/dark</item>
    </style>

    <style name="other_screens">
        <item name="android:background">@color/dark</item>
    </style>

    <style name="menuSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:thumbTint">@color/light_blue</item>
        <item name="android:trackTint">@color/extra_light_blue</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:backgroundTint">@color/transp</item>
        <item name="android:outlineSpotShadowColor">@color/transp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="inputSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:drawableTint">@color/dark</item>
        <item name="cornerRadius">16dp</item>
        <item name="background">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="paddingStart">12dp</item>
        <item name="paddingEnd">12dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textColorHint">@color/dark</item>
    </style>

    <style name="trackName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="artistDuration">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="itemVector">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginVertical">18dp</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="playlistBright">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@color/transp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="buttonLikeAdd">
        <item name="backgroundTint">@color/trans_white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">23dp</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="playlistPlayButton">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="playlistActivity">
        <item name="background">@color/dark</item>
    </style>

    <style name="tab_style">
        <item name="android:gravity">center</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabRippleColor">@color/light_blue</item>
        <item name="tabBackground">@color/dark</item>
        <item name="tabIndicator">@drawable/tab_indicator_white</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabMinWidth">240dp</item>
        <item name="background">@color/white</item>
    </style>


</resources>